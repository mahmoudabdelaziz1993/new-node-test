<% layout('layout') %>
<!-- Container, Row, and Column used for illustration purposes -->
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
        
            <!-- Begin fluid width widget -->
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-envelope"></span>Signup
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="media">
                        <div class="media-body">
                            
                            
                            <form method="post" action="/signup">
                                <div class="form-group">
                                    <label for="newsletter-name" class="hidden">FirstName</label>
                                    <input type="text"  name="firstname" class="form-control" id="firstname" placeholder="FirstName">
                                </div>
                                <div class="form-group">
                                    <label for="newsletter-name" class="hidden">lastName</label>
                                    <input type="text"  name="lastname" class="form-control" id="lastname" placeholder="lastName">
                                </div>
                                <div class="form-group">
                                    <label for="newsletter-email" class="hidden">Email address</label>
                                    <input type="text" class="form-control"name="email" id="email" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <label for="newsletter-email" class="hidden">Password</label>
                                    <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <label for="newsletter-email" class="hidden">Confirm Password</label>
                                    <input type="password" name="confirmpassword" class="form-control" id="confirmpassword" placeholder="Confirm Password">
                                </div>

                                <button type="submit" class="btn btn-default btn-block btn-success">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>